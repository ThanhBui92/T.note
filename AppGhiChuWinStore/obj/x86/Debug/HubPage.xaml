                    <GridView x:ConnectionId='5'
                        x:Name="itemGridView"
                        Margin="10,5,0,0"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        AutomationProperties.AutomationId="ItemGridView"
